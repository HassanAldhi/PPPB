<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanActivity"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:paddingHorizontal="24dp"
    android:layout_gravity="center"
    android:background="@color/light_gray">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/header_rencana_perjalanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rencana Perjalanan"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="@id/btn_back"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/header_rencana_perjalanan">

        <TextView
            android:id="@+id/header_asal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Asal"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <RelativeLayout
            android:id="@+id/bg_kotaAsal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/header_asal">
            <Spinner
                android:id="@+id/spinner_kota_asal"
                android:layout_width="match_parent"
                android:paddingHorizontal="16dp"
                android:layout_height="48dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bg_stasiunAsal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/bg_kotaAsal">
            <Spinner
                android:id="@+id/spinner_stasiun_asal"
                android:layout_width="match_parent"
                android:paddingHorizontal="16dp"
                android:layout_height="48dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_tujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tujuan"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/bg_stasiunAsal"
            app:layout_constraintStart_toStartOf="parent"/>

        <RelativeLayout
            android:id="@+id/bg_kotaTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/header_tujuan">
            <Spinner
                android:id="@+id/spinner_kota_tujuan"
                android:layout_width="match_parent"
                android:paddingHorizontal="16dp"
                android:layout_height="48dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bg_stasiunTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/bg_kotaTujuan">
            <Spinner
                android:id="@+id/spinner_stasiun_tujuan"
                android:layout_width="match_parent"
                android:paddingHorizontal="16dp"
                android:layout_height="48dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/bg_stasiunTujuan"
            app:layout_constraintStart_toStartOf="parent"/>
        <RelativeLayout
            android:id="@+id/bg_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/header_kelas">
            <Spinner
                android:id="@+id/spinner_kelas"
                android:layout_width="match_parent"
                android:paddingHorizontal="16dp"
                android:layout_height="48dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/bg_kelas"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/edt_tanggalBerangkat"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/light_gray"
            android:textColorHint="@color/gray"
            android:textSize="15sp"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Masukkan tanggal keberangkatan"
            app:layout_constraintTop_toBottomOf="@id/header_tanggal"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/edt_tanggalBerangkat">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/paket_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/toggle_snack"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Snack"
                    android:textAllCaps="false"
                    android:layout_marginRight="8dp"
                    />
                <Button
                    android:id="@+id/toggle_minuman"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Minuman"
                    android:textAllCaps="false"
                    android:layout_marginRight="8dp"
                    />
                <Button
                    android:id="@+id/toggle_makan"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Makan Siang"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/toggle_duduk_depan"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Duduk di depan"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/toggle_jendela"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Duduk dekat jendela"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/toggle_kursi"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Kursi Terapi"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/toggle_kasur"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Kasur tidur"
                    android:textAllCaps="false"
                    />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/header_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/dark_gray"/>
            <TextView
                android:id="@+id/total_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15"
                android:textSize="29sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/header_harga"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/dark_gray"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/btn_buat_rencana"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="Buat Rencana"
            android:textAllCaps="false"
            android:layout_weight="2"
            android:textSize="16sp"
            android:backgroundTint="@color/green"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>