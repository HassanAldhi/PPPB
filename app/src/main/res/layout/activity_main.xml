<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="32dp"
    android:paddingBottom="56dp"
    android:paddingHorizontal="24dp"
    android:layout_gravity="center"
    android:background="@color/light_gray">

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_subheader_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mari bergabung dan nikmati layanan kami "
        android:textSize="14sp"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt_register"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kartu_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/txt_subheader_reg">
        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/light_gray"
            android:hint="Masukkan username"
            android:textColorHint="@color/gray"
            android:textSize="14sp"
            android:paddingHorizontal="24dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/light_gray"
            android:hint="Masukkan email"
            android:textColorHint="@color/gray"
            android:textSize="14sp"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/edt_username"/>

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/light_gray"
            android:hint="Masukkan password"
            android:textColorHint="@color/gray"
            android:textSize="14sp"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/edt_email"/>

        <EditText
            android:id="@+id/edt_tanggalLahir"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/light_gray"
            android:textColorHint="@color/gray"
            android:textSize="14sp"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Masukkan tanggal lahir"
            app:layout_constraintTop_toBottomOf="@id/edt_password"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/kartu_register"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="18dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="@color/green"
        app:layout_constraintBottom_toTopOf="@id/txt_login"/>

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>